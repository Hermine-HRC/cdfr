<?xml version="1.0" encoding="utf-8"?>
<!--suppress XmlUnusedNamespaceDeclaration -->
<!-- Get meshes from the gazebo model -->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="herminebot">
    <!-- ****************** ROBOT BASE FOOTPRINT ***************************  -->
    <!-- Define the center of the main robot chassis projected on the ground -->
    <link name="base_footprint"/>

    <!-- The base footprint of the robot is located underneath the chassis -->
    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link" />
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
    </joint>

    <link name="base_link">
        <inertial>
            <origin xyz="-0.00737697 0.00071680 0.16673388" rpy="0 0 0" />
            <mass value="5" />
            <inertia
                ixx="0.07205170"
                ixy="0.00050070"
                ixz="-0.00108436"
                iyy="0.10411164"
                iyz="0.00010407"
                izz="0.05640490"
            />

        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://herminebot_gazebo/models/herminebot/meshes/base_visual.dae" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.014" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://herminebot_gazebo/models/herminebot/meshes/base_collision.stl" />
            </geometry>
        </collision>
    </link>

    <!-- ************************* WHEELS ********************** -->
    <xacro:macro name="wheel" params="prefix pose_y">
        <link name="${prefix}_wheel_link">
            <inertial>
                <origin xyz="-0.0007  0.0345 ${pose_y}" rpy="1.570796 0 0" />
                <mass value="0.2" />
                <inertia
                    ixx="0.00005780"
                    ixy="0"
                    ixz="0"
                    iyy="0.00004599"
                    iyz="0"
                    izz="0.00004599"
                />
            </inertial>
            <visual>
                <origin xyz="-0.0007  0 ${pose_y}" rpy="1.570796 0 0" />
                <geometry>
                    <mesh filename="package://herminebot_gazebo/models/herminebot/meshes/wheel.stl" />
                </geometry>
                <material name="">
                    <color rgba="0.7 0.8 0.05 1" />
                </material>
            </visual>
            <collision>
                <origin xyz="-0.0007  0 ${pose_y}" rpy="1.570796 0 0" />
                <geometry>
                    <mesh filename="package://herminebot_gazebo/models/herminebot/meshes/wheel.stl" />
                </geometry>
            </collision>
        </link>
        <joint name="${prefix}_wheel_joint" type="continuous">
            <origin xyz="0 0 0.0345" rpy="1.570796 0 0" />
            <parent link="base_link" />
            <child link="${prefix}_wheel_link" />
            <axis xyz="0 0 -1" />
        </joint>
    </xacro:macro>

    <xacro:wheel prefix="left" pose_y="0.0893"/>
    <xacro:wheel prefix="right" pose_y="-0.0892"/>

    <!-- ******************* CASTER WHEELS ***************** -->

    <xacro:macro name="caster" params="number pose_x pose_y">
        <link name="caster_wheel_link_${number}">
            <inertial>
                <origin xyz="${pose_x} ${pose_y} 0.0097" rpy="0 0 0" />
                <mass value="0.02" />
                <inertia
                    ixx="2.88E-7"
                    ixy="0"
                    ixz="0"
                    iyy="2.88E-7"
                    iyz="0"
                    izz="2.88E-7"
                />
            </inertial>
            <collision>
                <origin xyz="${pose_x} ${pose_y} 0.0097" rpy="0 0 0" />
                <geometry>
                    <sphere radius="0.006"/>
                </geometry>
            </collision>
        </link>
        <joint name="caster_joint_${number}" type="fixed">
            <origin xyz="0 0 0" rpy="0 0 0" />
            <parent link="base_link" />
            <child link="caster_wheel_link_${number}" />
        </joint>
    </xacro:macro>

    <xacro:caster number="1" pose_x="-0.061" pose_y="-0.1097"/>
    <xacro:caster number="2" pose_x="-0.061" pose_y="0.1097"/>
    <xacro:caster number="3" pose_x="0.061" pose_y="-0.1097"/>
    <xacro:caster number="4" pose_x="0.061" pose_y="0.1097"/>

    <!-- *********************** LIDAR ********************** -->

    <link name="lidar_link">
        <visual>
            <origin xyz="0 0 0.39" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://herminebot_gazebo/models/herminebot/meshes/lidar.stl" />
            </geometry>
            <material name="black">
                <color rgba="0 0 0 1" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0.375" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.05" length="0.118"/>
            </geometry>
        </collision>
    </link>
    <joint name="lidar_joint" type="fixed">
        <origin xyz="0 0 0" rpy="0 0 0" />
        <parent link="base_link" />
        <child link="lidar_link" />
    </joint>

    <!-- ******************** IMU *********************** -->

    <link name="imu_link">
        <visual>
            <origin xyz="0 0 0.02" rpy="0 0 0"/>
            <geometry>
                <box size="0.019 0.027 0.003"/>
            </geometry>
            <material name="blue">
                <color rgba="${0/255} ${0/255} ${255/255} ${255/255}"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0.02" rpy="0 0 0"/>
            <geometry>
                <box size="0.019 0.027 0.03"/>
            </geometry>
        </collision>
    </link>

    <joint name="imu_joint" type="fixed">
        <origin xyz="0 0 0" rpy="0 0 0" />
        <parent link="base_link" />
        <child link="imu_link" />
    </joint>

    <!-- ************************ LASER SENSORS ********************** -->

    <xacro:macro name="laser_sensor" params="number pose_x pose_y">
        <link name="laser_sensor_${number}_link">
            <visual>
                <origin xyz="${pose_x} ${pose_y} 0.025" rpy="0 0 0" />
                <geometry>
                    <box size="0.003 0.025 0.0107"/>
                </geometry>
                <material name="purple">
                    <color rgba="${153/255} ${0/255} ${153/255} ${255/255}"/>
                </material>
            </visual>

            <collision>
                <origin xyz="${pose_x} ${pose_y} 0.025" rpy="0 0 0" />
                <geometry>
                    <box size="0.003 0.025 0.0107"/>
                </geometry>
            </collision>
        </link>
        <joint name="laser_sensor_${number}_joint" type="fixed">
            <origin xyz="0 0 0" rpy="0 0 0" />
            <parent link="base_link" />
            <child link="laser_sensor_${number}_link" />
        </joint>
    </xacro:macro>

    <xacro:laser_sensor number="1" pose_x="0.085" pose_y="0.05"/>

</robot>
